<?xml version="1.0" encoding="utf-8"?>

<!-- CoordinatorLayout -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.EditFragment">

    <!-- NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- MaterialCardView: Type -->
            <com.google.android.material.card.MaterialCardView
                tools:visibility="gone"
                android:id="@+id/cardview_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cardview_characteristics"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="@dimen/elevation_card"
                style="@style/Widget.MaterialComponents.CardView">

                <!-- ConstraintLayout -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ImageView: Home icon -->
                    <ImageView
                        android:id="@+id/icon_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/fragment_edit_type"
                        android:baselineAlignBottom="true"
                        android:src="@drawable/ic_home"
                        android:contentDescription="@null"/>

                    <!-- TextInputLayout: Type -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        android:layout_marginBottom="@dimen/margin_little"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_price"
                        app:layout_constraintStart_toEndOf="@id/icon_home"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:errorEnabled="true"
                        app:hintEnabled="true"
                        app:endIconMode="dropdown_menu"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

                        <!-- AutoCompleteTextView: Type -->
                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_type"
                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TextInputLayout: Price -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_little"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_type"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/fragment_edit_type"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:hintEnabled="true"
                        app:errorEnabled="true"
                        app:background="@null"
                        app:endIconMode="clear_text"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Price -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_price"
                            android:inputType="numberDecimal"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- MaterialCardView: Characteristics -->
            <com.google.android.material.card.MaterialCardView
                tools:visibility="gone"
                android:id="@+id/cardview_characteristics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintTop_toBottomOf="@id/cardview_type"
                app:layout_constraintBottom_toTopOf="@id/cardview_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="@dimen/elevation_card"
                style="@style/Widget.MaterialComponents.CardView">

                <!-- ConstraintLayout -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ImageView: Setting icon -->
                    <ImageView
                        android:id="@+id/icon_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/fragment_edit_surface"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="@null"/>

                    <!-- TextInputLayout: Surface -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_surface"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        android:layout_marginBottom="@dimen/margin_little"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_number_of_room"
                        app:layout_constraintStart_toEndOf="@id/icon_setting"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:errorEnabled="true"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Surface -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_surface"
                            android:inputType="numberDecimal"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TextInputLayout: Number of room -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_number_of_room"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_little"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_surface"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_description"
                        app:layout_constraintStart_toStartOf="@id/fragment_edit_surface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:errorEnabled="true"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Number of room -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_number_of_room"
                            android:inputType="number"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TextInputLayout: Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_little"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_number_of_room"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/fragment_edit_surface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:errorEnabled="true"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Description -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_description"
                            android:inputType="textMultiLine"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- MaterialCardView: Address -->
            <com.google.android.material.card.MaterialCardView
                tools:visibility="gone"
                android:id="@+id/cardview_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintTop_toBottomOf="@id/cardview_characteristics"
                app:layout_constraintBottom_toTopOf="@id/cardview_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="@dimen/elevation_card"
                style="@style/Widget.MaterialComponents.CardView">

                <!-- ConstraintLayout -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ImageView: Place icon -->
                    <ImageView
                        android:id="@+id/icon_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="@id/fragment_edit_add_address"
                        app:layout_constraintBottom_toBottomOf="@id/fragment_edit_add_address"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_place"
                        android:contentDescription="@null"/>

                    <!-- ImageButton: Add address -->
                    <ImageButton
                        android:id="@+id/fragment_edit_add_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_address"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:src="@drawable/ic_add"
                        android:contentDescription="@null"
                        android:background="@color/colorAccent"/>

                    <!-- TextInputLayout: Address -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_add_address"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_city"
                        app:layout_constraintStart_toEndOf="@id/icon_place"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Address -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_address"
                            android:inputType="text"
                            android:enabled="false"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TextInputLayout: City -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_address"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_post_code"
                        app:layout_constraintStart_toStartOf="@id/fragment_edit_address"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: City -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_city"
                            android:inputType="text"
                            android:enabled="false"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TextInputLayout: Post code -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_post_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_city"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_map_lite_mode"
                        app:layout_constraintStart_toStartOf="@id/fragment_edit_address"
                        app:layout_constraintEnd_toStartOf="@id/fragment_edit_country"
                        app:layout_constraintHorizontal_weight="@integer/horizontal_weight_address_left"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Post code -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_post_code"
                            android:inputType="number"
                            android:enabled="false"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TextInputLayout: Country -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="@id/fragment_edit_post_code"
                        app:layout_constraintBottom_toBottomOf="@id/fragment_edit_post_code"
                        app:layout_constraintStart_toEndOf="@id/fragment_edit_post_code"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="@integer/horizontal_weight_address_right"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Country -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_country"
                            android:inputType="text"
                            android:enabled="false"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- fragment: Google Maps (Lite Mode) -->
                    <fragment
                        android:id="@+id/fragment_edit_map_lite_mode"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_post_code"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/fragment_edit_address"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        map:cameraZoom="17"
                        map:mapType="normal"
                        map:liteMode="true"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- MaterialCardView: Date -->
            <com.google.android.material.card.MaterialCardView
                tools:visibility="gone"
                android:id="@+id/cardview_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintTop_toBottomOf="@id/cardview_address"
                app:layout_constraintBottom_toTopOf="@id/cardview_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="@dimen/elevation_card"
                style="@style/Widget.MaterialComponents.CardView">

                <!-- ConstraintLayout -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ImageView: Date icon -->
                    <ImageView
                        android:id="@+id/icon_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="@id/fragment_edit_enable"
                        app:layout_constraintBottom_toBottomOf="@id/fragment_edit_enable"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/fragment_edit_enable"
                        android:src="@drawable/ic_date"
                        android:contentDescription="@null"/>

                    <!-- SwitchMaterial: Enable -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/fragment_edit_enable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_effective_date"
                        app:layout_constraintStart_toEndOf="@id/icon_date"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="@dimen/padding_normal"
                        android:text="@string/creator_enable"
                        android:checked="true"/>

                    <!-- TextInputLayout: Effective date -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_effective_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        android:layout_marginBottom="@dimen/margin_little"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_enable"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/fragment_edit_enable"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:errorEnabled="true"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Effective date -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_date"
                            android:inputType="date"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- MaterialCardView: Photo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintTop_toBottomOf="@id/cardview_date"
                app:layout_constraintBottom_toTopOf="@id/cardview_poi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="@dimen/elevation_card"
                style="@style/Widget.MaterialComponents.CardView">

                <!-- ConstraintLayout -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ImageView: Photo icon -->
                    <ImageView
                        android:id="@+id/icon_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="@id/fragment_edit_add_photo"
                        app:layout_constraintBottom_toBottomOf="@id/fragment_edit_add_photo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_photo"
                        android:contentDescription="@null"/>

                    <!-- ImageButton: Add photo -->
                    <ImageButton
                        android:id="@+id/fragment_edit_add_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:src="@drawable/ic_add"
                        android:contentDescription="@null"
                        android:background="@color/colorAccent"/>

                    <!-- RecyclerView: List of photos -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/fragment_edit_RecyclerView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_add_photo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/icon_photo"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:orientation="horizontal"
                        tools:listitem="@layout/item_photo"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- MaterialCardView: Points of interest -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_poi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_heavy"
                app:layout_constraintTop_toBottomOf="@id/cardview_photo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="@dimen/elevation_card"
                style="@style/Widget.MaterialComponents.CardView">

                <!-- ConstraintLayout -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ImageView: POI icon -->
                    <ImageView
                        android:id="@+id/icon_poi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_add_location"
                        android:contentDescription="@null"/>

                    <!-- HorizontalScrollView -->
                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/icon_poi"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_distance_poi"
                        app:layout_constraintStart_toEndOf="@id/icon_poi"
                        app:layout_constraintEnd_toEndOf="parent">

                        <!-- ChipGroup -->
                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleLine="true">

                            <!-- Chip: School -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/fragment_edit_Chip_school"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chip_school"
                                style="@style/Widget.MaterialComponents.Chip.Filter"/>

                            <!-- Chip: Restaurant -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/fragment_edit_Chip_restaurant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chip_restaurant"
                                style="@style/Widget.MaterialComponents.Chip.Filter"/>

                            <!-- Chip: Doctor -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/fragment_edit_Chip_doctor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chip_doctor"
                                style="@style/Widget.MaterialComponents.Chip.Filter"/>

                            <!-- Chip: Hospital -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/fragment_edit_Chip_hospital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chip_hospital"
                                style="@style/Widget.MaterialComponents.Chip.Filter"/>

                            <!-- Chip: Airport -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/fragment_edit_Chip_airport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chip_airport"
                                style="@style/Widget.MaterialComponents.Chip.Filter"/>

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                    <!-- TextInputLayout: Distance POI -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragment_edit_distance_poi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_search_poi"
                        app:layout_constraintStart_toEndOf="@id/icon_poi"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:hintEnabled="true"
                        app:errorEnabled="true"
                        app:background="@null"
                        app:endIconMode="clear_text"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <!-- TextInputEditText: Distance POI -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_distance"
                            android:text="@string/distance_poi"
                            android:inputType="number"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- MaterialButton: Search POIs -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fragment_edit_search_poi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        android:layout_marginBottom="@dimen/margin_little"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_distance_poi"
                        app:layout_constraintBottom_toTopOf="@id/fragment_edit_RecyclerView_poi"
                        app:layout_constraintStart_toEndOf="@id/icon_poi"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/search_poi_button"
                        style="@style/ButtonStyle"/>

                    <!-- RecyclerView: List of POIs -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/fragment_edit_RecyclerView_poi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_little"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        app:layout_constraintTop_toBottomOf="@id/fragment_edit_search_poi"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/icon_poi"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:orientation="horizontal"
                        tools:listitem="@layout/item_poi"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FloatingActionButton -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_edit_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        style="@style/FloatingActionButtonStyle"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>