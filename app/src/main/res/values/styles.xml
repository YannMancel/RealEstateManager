
<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Color theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Drawer arrow -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <!-- NoActionBar with DarkActionBar theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- *********************************** Toolbar ******************************************* -->

    <!-- Drawer arrow style -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="21">@dimen/elevation_toolbar</item>
    </style>

    <!-- *********************************** NavigationView ************************************ -->

    <!-- NavigationView style -->
    <style name="NavigationViewStyle">
        <item name="headerLayout">@layout/header_drawer_activity_main</item>
        <item name="menu">@menu/activity_main_menu_drawer</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <!-- *********************************** TextView ****************************************** -->

    <!-- One line TextView sub-style -->
    <style name="OneLineTextViewSubStyle" parent="AppTheme">
        <item name="android:maxLines">@integer/one_line_text_view</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- TextView style (level 1, black, normal) -->
    <style name="TextViewStyle1" parent="OneLineTextViewSubStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- TextView style (level 1, darker gray, normal) -->
    <style name="TextViewStyle2" parent="OneLineTextViewSubStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- TextView style (level 1, darker gray, normal) -->
    <style name="TextViewStyle3" parent="OneLineTextViewSubStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- TextView style (level 1, white, normal) -->
    <style name="TextViewStyle4" parent="OneLineTextViewSubStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- *********************************** Button ******************************************** -->

    <!-- Borderless Button style -->
    <style name="BorderlessButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
